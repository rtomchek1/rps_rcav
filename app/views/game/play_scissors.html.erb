<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" type="text/css" href="/assets/css/bootstrap.css">
  </head>
  <body>
    <div class="container">
      <hr>
      <div class="row">
        <div class="col-md-8 col-md-offset-2 col-xs-12">
          <div class="btn-group btn-group-justified">
            <a href="/rock" class="btn btn-block btn-primary">
              Play Rock
            </a>
            <a href = "/paper" class="btn btn-block btn-primary">
              Play Paper
            </a>
            <a href = "/scissors" class="btn btn-block btn-primary">
              Play Scissors
            </a>
          </div>
          <hr>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4 col-md-offset-2 col-xs-6">
          <div class="panel panel-success">
            <div class="panel-heading">
              <h2 class="panel-title text-center">
                Scissors
              </h2>
            </div>
            <div class="panel-body">
              <img class="img-responsive" src="/assets/images/scissors.png">
            </div>
          </div>
        </div>

        <div class="col-md-4 col-xs-6">
          <div class="panel panel-danger">
            <div class="panel-heading">
              <h2 class="panel-title text-center">
                <%= @computer_move.capitalize %>
              </h2>
            </div>
            <div class="panel-body">
              <% if @computer_move == "rock"
                computer_move_src = "/assets/images/rock.png"
              elsif @computer_move == "paper"
                computer_move_src = "/assets/images/paper.png"
              else
                computer_move_src = "/assets/images/scissors.png"
              end %>

              <img class="img-responsive" src= <%= computer_move_src %> >
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="well text-center">
              <h1>
                <span class="label label-success">
                  <% if @computer_move == "scissors" %>
                    You tied!
                  <% elsif @computer_move == "rock" %>
                    You lost!
                  <% else %>
                    You won!
                  <% end %>
                </span>
              </h1>
            </div>
          </div>
        </div>
      </div>
   </body>
</html>